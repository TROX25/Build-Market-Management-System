@using Build_Market_Management_System.Models;
@model List<Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>Categories</h3>
<br />
@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td><a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id="@category.ID">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}
